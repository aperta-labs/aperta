{
  "name": "aperta",
  "version": "1.0.0",
  "description": "Monorepo for aperta libraries",
  "private": true,
  "scripts": {
    "build:flags": "cd ./packages/flags && bun run build",
    "build:logging": "cd ./packages/logging && bun run build",
    "build:store": "cd ./packages/store && bun run build",
    "install": "bun install --filter './packages/*'"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aperta-labs/aperta.git"
  },
  "author": "Liam Grossman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aperta-labs/aperta/issues"
  },
  "homepage": "https://github.com/aperta-labs/aperta#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.7"
  }
}
