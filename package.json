{
  "name": "aperta",
  "version": "1.0.0",
  "description": "Monorepo for aperta libraries",
  "private": true,
  "scripts": {
    "build": "bun run --filter @aperta/* build",
    "build:parallel": "bun run --filter @aperta/* --parallel build",
    "release": "bun run --filter @aperta/* release",
    "release:parallel": "bun run --filter @aperta/* --parallel release"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aperta-labs/aperta.git"
  },
  "author": "Liam Grossman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aperta-labs/aperta/issues"
  },
  "homepage": "https://github.com/aperta-labs/aperta#readme",
  "devDependencies": {
    "@changesets/cli": "^2.29.7"
  }
}
